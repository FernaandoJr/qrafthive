{
	"name": "qrafthive",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"dev:server": "turbo run dev --filter=server",
		"dev:web": "turbo run dev --filter=web",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"check-types": "turbo run check-types"
	},
	"devDependencies": {
		"prettier": "^3.7.4",
		"turbo": "^2.6.3",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.2.18",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
